

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4" >
      <h2 align="center" style="margin-top:10%" >Login </h2>

      <div class="signin">

        <%= form_tag users_signin_path    do  %>
          <div class="form-group" >
            <%= label_tag("email") %><br />
            <%= email_field_tag(:email, "", required: true, autofocus: true, class:"form-control") %>
          </div>
          <div class="form-group" >
            <%= label_tag("password") %><br />
            <%= password_field_tag(:password, "",required: true, autocomplete: "off", class:"form-control" ) %>
          </div>
          <div class="form-group" >
            <%= label_tag("remember_me") %>
            <%= check_box_tag(:remember_me,"", class:"form-control" ) %>
          </div>
          <div class="form-group">
            <%= submit_tag("Log in", class: "btn btn-primary ") %>
          </div>
        <% end %>

        <%= link_to "Signup", users_newuser_path %><br/>
        <%= link_to "Forget your password", users_changepassword_path %>

      </div>
    </div>
  </div>
</div>
