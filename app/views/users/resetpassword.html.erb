<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4" >
      <h2 align="center" style="margin-top:10%;">Reset password?</h2>
      <div class="signin">

        <%= form_tag users_forgetpassword_path do  %><br/><br/>
          <div class="form-group">
            <%= hidden_field_tag(:email, params[:email]) %>
          </div>
          <br/>
          <div class="form-group">
            <%= label_tag("password") %><br />
            <%= password_field_tag(:password, "", autofocus: true, required: true, class:"form-control") %>
          </div>

          <div class="form-group">
            <%= submit_tag "submit", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
